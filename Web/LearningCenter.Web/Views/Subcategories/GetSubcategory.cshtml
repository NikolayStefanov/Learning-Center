@model LearningCenter.Web.ViewModels.SubCategories.SubCategoryViewModel
@{
    this.ViewData["Title"] = "Subcategory";
}
<div id="targetCategoryPage" class="bg-image bg-parallax overlay"></div>

<div id="coursesList" class="col-md-12">
    <div class="text-center white-text">
        <h1 class="white-text">@Model.Title.ToUpper()</h1>
        <hr />
    </div>
    @if (Model.Courses.Any())
    {
        <div id="subcategoryCourses">
            <partial name="_ListCoursesPartial" model="@Model" />
        </div>
    }
    else
    {
        <h2 class="white-text">There isn't any courses yet in this Subcategory!</h2>
    }
</div>